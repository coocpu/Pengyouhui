<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_common_50"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/id_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_common_15"
            android:text="充值：100.0"
            android:textColor="@color/color_font_wallet_operation"
            android:textSize="@dimen/dimen_common_font_12"/>

        <TextView
            android:id="@+id/id_textview2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingRight="@dimen/dimen_common_15"
            android:text="2016-8-24"
            android:textColor="@color/color_font_wallet_operation"
            android:textSize="@dimen/dimen_common_font_12"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_common_1"
        android:layout_marginLeft="@dimen/dimen_common_15"
        android:layout_marginRight="@dimen/dimen_common_15"
        android:background="@color/color_common_divider"/>
</LinearLayout>